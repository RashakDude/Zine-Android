<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#F5F5F5"
    android:layout_marginBottom="50dp"
    android:paddingTop="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
   >




            <LinearLayout
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="➯ How to register for Zine Workshop ?"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Go to the registration desk near sports complex and get yourself registered by paying the fees. There would be offline registration for each student."
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_margin="8dp"
                    android:background="#546E7A" />
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="➯ What are the Workshop dates ?"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="The Workshop is scheduled to be held from 7th to 15th September."
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="start" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#546E7A"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     
                    android:layout_marginTop="4dp"
                    android:text="➯ Do you charge anything for Workshop ?"
                    android:textAlignment="viewStart"
                      
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Yes, the charge is rupees 900 per head."
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                      
                    android:gravity="start" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#546E7A"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="➯ What is the last date of Registration ?"
                    android:layout_marginTop="4dp"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                     
                      
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="The last date of Registration is 25th August."
                    android:textAlignment="viewStart"
                      
                    android:gravity="start" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#546E7A"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/txt8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="➯ Where would be the Workshop held ?"
                    android:layout_marginTop="4dp"
                    android:textAlignment="viewStart"
                      
                    android:textSize="16sp"
                     
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txt9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textSize="15sp"
                    android:text="Details will be updated soon on our website, app and facebook page."
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="start" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#546E7A"
                    android:layout_margin="8dp"/>
                <TextView
                    android:id="@+id/t12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="➯ What is the criteria to be a part of Zine Team ?"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="4dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/t13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Post Workshop there will be an exam and a interview for shortlisted candidates."
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="start" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#546E7A"
                    android:layout_margin="8dp"/>

            </LinearLayout>
</android.support.v4.widget.NestedScrollView>